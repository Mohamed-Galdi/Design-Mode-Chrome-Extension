{
  "manifest_version": 3,
  "name": "Design Mode ON/OFF",
  "version": "1.0",
  "description": "Toggle document.designMode on and off to edit the webpage content.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon_bw_16.png",
      "48": "icons/icon_bw_48.png",
      "128": "icons/icon_bw_128.png"
    },
    "default_title": "Design Mode ON/OFF"
  },
  "icons": {
    "16": "icons/icon_color_16.png",
    "32": "icons/icon_color_48.png",
    "48": "icons/icon_color_48.png",
    "128": "icons/icon_color_128.png"
  }
}
